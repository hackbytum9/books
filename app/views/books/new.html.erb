<div class="container">
	<%= form_for @book do |b| %>

	  <div class="form-group">
	  	<%= b.label :Name_Book %>
	  	<%= b.text_field :name ,class: "form-control" %>
	  </div>

	  <div class="form-group">
	  	<%= b.label :Detail %>
	  	<%= b.text_area :detail ,class: "form-control" %>
	  </div>

	  <div class="form-group">
	  	<%= b.label :Writer %>
	  	<%= b.text_field :writer ,class: "form-control" %>
	  </div>

	  <div class="field">
    <%= b.label :Profile_image %>
    <%= b.attachment_field :profile_image %>
  </div>
	<%= b.submit 'Add', class: "btn btn-primary" %>
		<% end %>
</div>

